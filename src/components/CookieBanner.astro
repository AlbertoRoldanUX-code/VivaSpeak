---
const cookieValue = Astro.cookies.get("cookie-consent")?.value ?? "";
const bannerDismissed = ["true", "accepted", "rejected"].includes(cookieValue);
const { lang = "es" } = Astro.props;

const locale = (lang || "es").toLowerCase().startsWith("en") ? "en" : "es";
const translations = {
  es: {
    ariaLabel: "Preferencias de cookies",
    headline: "Tu privacidad primero.",
    description:
      "Usamos cookies para medir el uso del sitio y mejorar VivaSpeak. Puedes aceptarlas todas o quedarte solo con las necesarias.",
    privacyLabel: "política de privacidad",
    privacyHref: "/politica-de-privacidad",
    reject: "Solo necesarias",
    accept: "Permitir todas",
  },
  en: {
    ariaLabel: "Cookie preferences",
    headline: "We respect your privacy.",
    description:
      "We use cookies to understand site usage and keep improving VivaSpeak. You can allow all cookies or keep only the essential ones.",
    privacyLabel: "privacy policy",
    privacyHref: "/en/privacy-policy",
    reject: "Essential only",
    accept: "Allow all",
  },
};

const text = translations[locale];
---

{!bannerDismissed && (
  <aside
    id="cookie-banner"
    class="cookie-banner"
    role="dialog"
    aria-live="polite"
    aria-label={text.ariaLabel}
    data-cookie-banner
  >
    <div class="cookie-copy">
      <strong>{text.headline}</strong>
      <p>
        {text.description}{" "}
        <a href={text.privacyHref} target="_blank" rel="noopener">
          {text.privacyLabel}
        </a>{" "}
        {locale === "es" ? "para más detalles." : "for more details."}
      </p>
    </div>
    <div class="cookie-actions">
      <button type="button" class="btn ghost" data-cookie-reject>
        {text.reject}
      </button>
      <button type="button" class="btn solid" data-cookie-accept>
        {text.accept}
      </button>
    </div>
  </aside>
)}

<style>
  .cookie-banner {
    position: fixed;
    inset: auto 0 1.5rem;
    margin: 0 auto;
    width: min(92vw, 840px);
    background: #101828;
    color: #f2f4f7;
    padding: 1.5rem;
    border-radius: 16px;
    box-shadow: 0 20px 45px rgba(15, 23, 42, 0.35);
    display: flex;
    flex-wrap: wrap;
    gap: 1.25rem;
    align-items: center;
    z-index: 9999;
    border: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(18px);
    transform: translateY(0);
    transition: opacity 200ms ease, transform 200ms ease;
  }

  .cookie-banner.is-hiding {
    opacity: 0;
    transform: translateY(12px);
    pointer-events: none;
  }

  .cookie-copy {
    flex: 1 1 320px;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .cookie-copy strong {
    display: block;
    font-size: 1rem;
    margin-bottom: 0.35rem;
    color: #fff;
  }

  .cookie-copy a {
    color: #f97316;
    text-decoration: underline;
  }

  .cookie-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .btn {
    border-radius: 999px;
    font-weight: 600;
    padding: 0.65rem 1.5rem;
    border: 1px solid transparent;
    cursor: pointer;
    font-size: 0.95rem;
    transition: transform 150ms ease, box-shadow 150ms ease;
  }

  .btn:focus-visible {
    outline: 2px solid #f97316;
    outline-offset: 2px;
  }

  .btn.solid {
    background: linear-gradient(120deg, #ff7a18, #af002d 85%);
    color: #fff;
    box-shadow: 0 8px 20px rgba(255, 122, 24, 0.35);
  }

  .btn.ghost {
    background: transparent;
    color: #f2f4f7;
    border-color: rgba(255, 255, 255, 0.25);
  }

  .btn:hover {
    transform: translateY(-1px);
  }

  @media (max-width: 640px) {
    .cookie-banner {
      flex-direction: column;
      text-align: left;
      padding: 1.25rem;
    }

    .cookie-actions {
      width: 100%;
      justify-content: stretch;
    }

    .cookie-actions .btn {
      flex: 1;
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const banner = document.querySelector("[data-cookie-banner]");
    if (!banner) return;

    const acceptBtn = banner.querySelector("[data-cookie-accept]");
    const rejectBtn = banner.querySelector("[data-cookie-reject]");

    const setConsent = (value) => {
  // ✅ Solo cookies, sin localStorage
  const oneYear = 60 * 60 * 24 * 365;
  document.cookie = `cookie-consent=${value};path=/;max-age=${oneYear};SameSite=Lax`;
  
  if (value === "accepted") {
    window.loadGA?.();
  }
};

    const hideBanner = () => {
      banner.classList.add("is-hiding");
      banner.addEventListener(
        "transitionend",
        () => banner.remove(),
        { once: true }
      );
    };

    acceptBtn?.addEventListener("click", () => {
      setConsent("accepted");
      hideBanner();
    });

    rejectBtn?.addEventListener("click", () => {
      setConsent("rejected");
      hideBanner();
    });
  });
</script>
