---
const { lang = "es" } = Astro.props;

const locale = (lang || "es").toLowerCase().startsWith("en") ? "en" : "es";
const translations = {
  es: {
    ariaLabel: "Preferencias de cookies",
    headline: "Tu privacidad primero.",
    description:
      "Usamos cookies para medir el uso del sitio y mejorar VivaSpeak. Puedes aceptarlas todas o quedarte solo con las necesarias.",
    privacyLabel: "política de privacidad",
    privacyHref: "/politica-de-privacidad",
    reject: "Solo necesarias",
    accept: "Permitir todas",
  },
  en: {
    ariaLabel: "Cookie preferences",
    headline: "We respect your privacy.",
    description:
      "We use cookies to understand site usage and keep improving VivaSpeak. You can allow all cookies or keep only the essential ones.",
    privacyLabel: "privacy policy",
    privacyHref: "/en/privacy-policy",
    reject: "Essential only",
    accept: "Allow all",
  },
};

const text = translations[locale];
---

<div id="cookie-banner-root" class="cookie-banner-root cookie-banner--hidden" data-cookie-banner>
  <div class="cookie-banner-backdrop" aria-hidden="true"></div>
  <aside
    id="cookie-banner"
    class="cookie-banner"
    role="dialog"
    aria-live="polite"
    aria-label={text.ariaLabel}
  >
    <div class="cookie-copy">
      <strong>{text.headline}</strong>
      <p>
        {text.description}{" "}
        <a href={text.privacyHref} target="_blank" rel="noopener">
          {text.privacyLabel}
        </a>{" "}
        {locale === "es" ? "para más detalles." : "for more details."}
      </p>
    </div>
    <div class="cookie-actions">
      <button type="button" class="btn ghost" data-cookie-reject>
        {text.reject}
      </button>
      <button type="button" class="btn solid" data-cookie-accept>
        {text.accept}
      </button>
    </div>
  </aside>
</div>

<style>
  /* Root: oculta todo el bloque inicialmente */
  .cookie-banner-root {
    position: fixed;
    inset: 0;
    z-index: 9999;
    pointer-events: none;
    transition: opacity 300ms ease-out;
  }

  .cookie-banner-root.cookie-banner--hidden {
    opacity: 0;
    pointer-events: none;
  }

  .cookie-banner-root:not(.cookie-banner--hidden) {
    pointer-events: auto;
  }

  .cookie-banner-root.cookie-banner--is-hiding {
    opacity: 0;
    pointer-events: none;
  }

  /* Backdrop oscuro (solo móvil) */
  .cookie-banner-backdrop {
    display: none;
  }

  /* Banner base */
  .cookie-banner {
    position: fixed;
    background: #101828;
    color: #f2f4f7;
    display: flex;
    flex-wrap: wrap;
    gap: 1.25rem;
    align-items: center;
    border: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(18px);
    box-shadow: 0 20px 45px rgba(15, 23, 42, 0.35);
    transform: translateY(100%);
    transition: transform 300ms ease-out, opacity 300ms ease-out;
  }

  .cookie-banner-root:not(.cookie-banner--hidden):not(.cookie-banner--is-hiding) .cookie-banner {
    transform: translateY(0);
  }

  .cookie-copy {
    flex: 1 1 320px;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .cookie-copy strong {
    display: block;
    font-size: 1rem;
    margin-bottom: 0.35rem;
    color: #fff;
  }

  .cookie-copy a {
    color: #f97316;
    text-decoration: underline;
  }

  .cookie-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .btn {
    border-radius: 999px;
    font-weight: 600;
    padding: 0.65rem 1.5rem;
    border: 1px solid transparent;
    cursor: pointer;
    font-size: 0.95rem;
    transition: transform 150ms ease, box-shadow 150ms ease;
  }

  .btn:focus-visible {
    outline: 2px solid #f97316;
    outline-offset: 2px;
  }

  .btn.solid {
    background: linear-gradient(120deg, #ff7a18, #af002d 85%);
    color: #fff;
    box-shadow: 0 8px 20px rgba(255, 122, 24, 0.35);
  }

  .btn.ghost {
    background: transparent;
    color: #f2f4f7;
    border-color: rgba(255, 255, 255, 0.25);
  }

  .btn:hover {
    transform: translateY(-1px);
  }

  /* Móvil: bottom sheet */
  @media (max-width: 767px) {
    .cookie-banner-backdrop {
      display: block;
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.4);
      z-index: -1;
      opacity: 0;
      transition: opacity 300ms ease-out;
    }

    .cookie-banner-root:not(.cookie-banner--hidden):not(.cookie-banner--is-hiding) .cookie-banner-backdrop {
      opacity: 1;
    }

    .cookie-banner {
      bottom: 0;
      left: 0;
      right: 0;
      max-height: 70vh;
      overflow-y: auto;
      border-radius: 16px 16px 0 0;
      padding: 1rem;
      flex-direction: column;
      align-items: stretch;
      text-align: left;
    }

    .cookie-copy {
      flex: none;
      font-size: 0.875rem;
    }

    .cookie-copy strong {
      font-size: 0.9375rem;
    }

    .cookie-actions {
      flex-direction: column;
      width: 100%;
      gap: 0.5rem;
    }

    .cookie-actions .btn {
      width: 100%;
      text-align: center;
    }
  }

  /* Desktop: card flotante */
  @media (min-width: 768px) {
    .cookie-banner {
      bottom: 1.5rem;
      right: 1.5rem;
      left: auto;
      max-width: 28rem;
      width: min(92vw, 28rem);
      padding: 1.5rem;
      border-radius: 16px;
    }

    .cookie-actions {
      flex-direction: row;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const root = document.querySelector("[data-cookie-banner]");
    if (!root) return;

    const acceptBtn = root.querySelector("[data-cookie-accept]");
    const rejectBtn = root.querySelector("[data-cookie-reject]");

    const getCookie = (name) => {
      const v = document.cookie.match("(^|;) ?" + name + "=([^;]*)(;|$)");
      return v ? v[2] : null;
    };

    const existing = getCookie("cookie-consent");

    // Si ya han elegido → no mostramos
    if (existing === "accepted" || existing === "rejected") {
      root.remove();
      return;
    }

    // Mostrar banner (animación desde abajo)
    root.classList.remove("cookie-banner--hidden");

    const setConsent = (value) => {
      const oneYear = 60 * 60 * 24 * 365;
      const secure = window.location.protocol === "https:" ? ";Secure" : "";
      document.cookie =
        `cookie-consent=${value};path=/;max-age=${oneYear};SameSite=Lax` +
        secure;

      if (value === "accepted" && typeof window.gtag === "function") {
        window.gtag("consent", "update", {
          ad_storage: "granted",
          ad_user_data: "granted",
          ad_personalization: "granted",
          analytics_storage: "granted",
        });
      }
    };

    const hideBanner = () => {
      root.classList.add("cookie-banner--is-hiding");
      root.addEventListener("transitionend", () => root.remove(), {
        once: true,
      });
    };

    acceptBtn?.addEventListener("click", () => {
      setConsent("accepted");
      hideBanner();
    });

    rejectBtn?.addEventListener("click", () => {
      setConsent("rejected");
      hideBanner();
    });
  });
</script>
